<h2>Editing article</h2>

<%= simple_form_for(@article) do |f| %>
  <div class="row">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control " %>
    <%= f.label :content %>
    <%= f.text_field :content, class: "form-control w-3" %>
    <%= f.submit class: "btn btn-warning m-3" %>
  </div>
<% end %>